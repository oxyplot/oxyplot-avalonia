<Window 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia" 
        x:Class="AvaloniaExamples.Examples.ScrollViewerDemo.MainWindow"
        Title="ScrollViewerDemo" Height="480" Width="640">
    <Grid>
        <ScrollViewer>
            <oxy:PlotView Model="{Binding Plot}" Height="1000"/>
        </ScrollViewer>
    </Grid>
</Window>
